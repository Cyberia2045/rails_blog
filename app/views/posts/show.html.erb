<div class = "post_container">

<h1 class = "pm_general" ><%= @post.title %></h1>

<p><%= @post.body %></p>



<div class = "edit_div">
	<%= link_to "Edit |", edit_post_path(@post) %>
	<%= link_to "| Delete", post_path(@post), method: :delete %>
</div>

<div class = "post_by" ><small>Posted by: <%= @post.try(:user).try(:email) || "anonymous" %></small></div>

	<div class = "comment_display">
	<% @post.comments.each do |comment| %>
		<p class = "comment"><%= comment.body %></p> <p class = "comment_writer"><%= comment.user.email %> <br>
		<%= link_to 'Delete', [comment.post, comment], method: :delete %>
		</p>
	<% end %>

<div id = "comments">
	<h3>Add a Comment:</h3>
	<%= render "comments/form" %>
</div>

</div>

