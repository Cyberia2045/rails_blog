<div class="fuck">
<%= form_for(@user, html: { multipart: true, class: "form_div" }) do |f| %>
	<%= f.text_field :first_name, :class => "user_name", placeholder: "User Name" %>
	<br>
	<br>
	<%= f.text_field :email, :class => "user_email", placeholder: "Email" %>
	<br>
	<br>
	<%= f.password_field :password, :class => "user_password", placeholder: "Password" %>
	<br>
	<br>
	<%= f.text_field :bio, :class => "user_bio", placeholder: "Enter a nice bio" %>
	<br>
	<br>
	<%= f.file_field :avatar, :class => "user_avatar" %>
	<br>
	<br> 
	<%= f.submit :class => "user_submit" %>
<% end %>	
</div>
